{
  "name": "easy-app-builder",
  "version": "1.0.7",
  "description": "Build and publish your Apps as easy as pie",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package-app": "electron-forge package",
    "make-app": "electron-forge make",
    "publish-app": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "postinstall": "patch-package",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "npm pubilsh",
    "deploy:digikala": "npm publish --registry https://npm.digikala.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MostafaTaghipour/easy-app-builder.git"
  },
  "keywords": [
    "easy app builder",
    "building",
    "release-automation",
    "publishing",
    "appstore",
    "googleplay",
    "apk",
    "ipa",
    "android",
    "ios",
    "react-native"
  ],
  "author": "Mostafa Taghipour <mostafa.taghipoor@gmail.com>",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "easy_app_builder"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@electron/remote": "^1.2.1",
    "@mtproto/core": "6.0.1",
    "adbkit": "^2.11.1",
    "app-info-parser": "^1.1.3",
    "child_process": "^1.0.2",
    "electron-context-menu": "^3.1.1",
    "electron-prompt": "^1.6.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-util": "^0.17.0",
    "events": "^3.3.0",
    "googleapis": "^83.0.0",
    "ios-deploy": "^1.11.4",
    "mime-types": "^2.1.32",
    "node-simctl": "^6.4.1",
    "node-zip": "^1.1.1",
    "playup": "^1.1.0",
    "puppeteer-core": "^10.2.0",
    "puppeteer-in-electron": "^3.0.5",
    "request": "^2.88.2",
    "sequential-task-queue": "^1.2.1",
    "stay-awake": "^0.0.3",
    "tdlnode": "^1.2.0",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.10.11",
    "util": "^0.12.4",
    "patch-package": "^6.4.7",
    "whatsapp-web-electron.js": "github:Zzombiee2361/whatsapp-web-electron.js",
    "@electron-forge/cli": "^6.0.0-beta.59",
    "electron": "13.1.8"
  },
  "devDependencies": {
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "electron-reloader": "^1.2.1",
    "electron": "13.1.8"
  },
  "bugs": {
    "url": "https://github.com/MostafaTaghipour/easy-app-builder/issues"
  },
  "homepage": "https://github.com/MostafaTaghipour/easy-app-builder#readme"
}
